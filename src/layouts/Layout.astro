---
import "../styles/global.css";
const { title = "Joe Morrison", description = "Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" href="/NOISE1.ico" sizes="any" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body>
    <header class="header">
      <div class="wrap headerInner">
        <!-- Left: logo -->
        <a class="logoLink" href="/" aria-label="Home">
          <img class="logo" src="/logo.png" alt="Logo" />
        </a>

        <!-- Center: TRUE centered (hard-override so it cannot get tiny) -->
        <a id="centerTitle" class="centerTitle" href="/">Joe Morrison</a>

        <!-- Right: nav -->
        <nav class="nav" aria-label="Primary">
          <a href="/projects">Projects</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a href="/resume">Resume</a>
        </nav>
      </div>
    </header>

    <main class="main">
      <div class="wrap">
        <div class="content">
          <slot />
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="wrap">Â© {new Date().getFullYear()} Joe Morrison</div>
    </footer>

    <style>
      .wrap { max-width: 1200px; margin: 0 auto; padding: 0 20px; }

      .header{
        position: sticky;
        top: 0;
        z-index: 50;

        min-height: 120px;
        border-bottom: 1px solid rgba(255,255,255,.08);
        background: rgba(11,15,25,.75);
        backdrop-filter: blur(10px);

        display: flex;
        align-items: center;
      }

      /* IMPORTANT: anchor for absolute centering */
      .headerInner{
        width: 100%;
        position: relative !important;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .logoLink{ display: inline-flex; align-items: center; }
      .logo{
        width: 95px;
        height: 95px;
        display: block;
        object-fit: contain;
      }

      .nav{
        display: flex;
        align-items: center;
        gap: 18px;
        font-size: 14px;
      }
      .nav a{
        text-decoration: none;
        padding: 8px 10px;
        border-radius: 12px;
        color: rgba(229,231,235,.9);
      }
      .nav a:hover{
        background: rgba(255,255,255,.06);
      }

      .main{ padding: 64px 0; }
      .content{
        max-width: 760px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 22px;
      }
      .footer{
        border-top: 1px solid rgba(255,255,255,.08);
        padding: 28px 0;
        color: rgba(229,231,235,.6);
        font-size: 14px;
      }

      /* ---- HARD OVERRIDE (if this doesn't work, you're editing the wrong file) ---- */
      #centerTitle{
        position: absolute !important;
        left: 50% !important;
        top: 50% !important;
        transform: translate(-50%, -50%) !important;
        white-space: nowrap !important;

        font-size: 52px !important;
        font-weight: 700 !important;
        line-height: 1 !important;
        letter-spacing: -0.02em !important;

        color: rgba(229,231,235,.95) !important;
        text-decoration: none !important;
        z-index: 2 !important;
      }

      /* Responsive: keep true-centering, just scale down */
      @media (max-width: 900px){
        .header{ min-height: 92px; }
        .logo{ width: 75px; height: 75px; }
        #centerTitle{ font-size: 26px !important; }
        .nav{ gap: 10px; font-size: 13px; }
        .nav a{ padding: 6px 8px; }
      }
    </style>
  </body>
</html>
