---
import "../styles/global.css";
const { title = "Joe Morrison", description = "Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body>
    <header class="header">
      <div class="wrap headerInner">
        <!-- Left: logo -->
        <a class="logoLink" href="/" aria-label="Home">
          <img class="logo" src="/logo.png" alt="Logo" />
        </a>

        <!-- Center: title (TRUE centered to page, independent of logo/nav widths) -->
        <a class="centerTitle" href="/">Joe Morrison</a>

        <!-- Right: nav -->
        <nav class="nav" aria-label="Primary">
          <a href="/projects">Projects</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a href="/resume">Resume</a>
        </nav>
      </div>
    </header>

    <main class="main">
      <div class="wrap">
        <div class="content">
          <slot />
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="wrap">Â© {new Date().getFullYear()} Joe Morrison</div>
    </footer>

    <style>
      .wrap { max-width: 1200px; margin: 0 auto; padding: 0 20px; }

      .header{
        position: sticky;
        top: 0;
        z-index: 50;
        min-height: 120px;
        border-bottom: 1px solid rgba(255,255,255,.08);
        background: rgba(11,15,25,.75);
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
      }

      /* keep logo left + nav right */
      .headerInner{
        width: 100%;
        position: relative; /* anchor for absolute center title */
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .logoLink{ display: inline-flex; align-items: center; }
      .logo{
        width: 72px;
        height: 72px;
        display: block;
        object-fit: contain;
      }

      /* TRUE centered title */
      .centerTitle{
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        white-space: nowrap;
        text-decoration: none;
        font-size: 52px;
        font-weight: 800;
        line-height: 1;
        letter-spacing: -0.03em;
        color: rgba(229,231,235,.95);
      }

      .nav{
        display: flex;
        align-items: center;
        gap: 18px;
        font-size: 14px;
      }
      .nav a{
        text-decoration: none;
        padding: 8px 10px;
        border-radius: 12px;
        color: rgba(229,231,235,.9);
      }
      .nav a:hover{ background: rgba(255,255,255,.06); }

      .main{ padding: 64px 0; }

      .content{
        max-width: 760px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 22px;
      }

      .footer{
        border-top: 1px solid rgba(255,255,255,.08);
        padding: 28px 0;
        color: rgba(229,231,235,.6);
        font-size: 14px;
      }

      /* responsive: scale down, DO NOT re-center/stack layout */
      @media (max-width: 900px){
        .header{ min-height: 92px; }
        .logo{ width: 44px; height: 44px; }
        .centerTitle{ font-size: 26px; }
        .nav{ gap: 10px; font-size: 13px; }
        .nav a{ padding: 6px 8px; }
      }
    </style>
  </body>
</html>
