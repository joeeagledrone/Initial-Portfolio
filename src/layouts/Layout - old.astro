---
import "../styles/global.css";
const { title = "Joe Morrison", description = "Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>



  <body>
    <header class="header">
      <div class="wrap headerGrid">
        <!-- Left: logo -->
        <div class="left">
          <a class="logoLink" href="/" aria-label="Home">
            <img class="logo" src="/logo.png" alt="Logo" />
          </a>
        </div>

        <!-- Center: name (true centered on page) -->
        <div class="center">
          <a class="titleLink" href="/">Joe Morrison</a>
        </div>

        <!-- Right: nav -->
        <nav class="right nav" aria-label="Primary">
          <a href="/projects">Projects</a>
          <a href="/about">About</a>
          <a href="/contact">Contact</a>
          <a href="/resume">Resume</a>
        </nav>
      </div>
    </header>

    <main class="main">
      <div class="wrap">
        <div class="content">
          <slot />
        </div>
      </div>
    </main>

    <footer class="footer">
      <div class="wrap">Â© {new Date().getFullYear()} Joe Morrison</div>
    </footer>

    <style>
      /* layout container */
      .wrap { max-width: 1200px; margin: 0 auto; padding: 0 20px; }

      /* header band */
      .header {
        position: sticky;
        top: 0;
        z-index: 50;

        min-height: 120px;                 /* controls header height */
        border-bottom: 1px solid rgba(255,255,255,.08);
        background: rgba(11,15,25,.75);
        backdrop-filter: blur(10px);

        display: flex;
        align-items: center;               /* vertical center */
      }

      /* 3-zone header grid */
      .headerGrid {
        width: 100%;
        display: grid;
        grid-template-columns: auto 1fr auto; /* left | center | right */
        align-items: center;
      }

      .left  { justify-self: start; }
      .center{ justify-self: center; }
      .right { justify-self: end; }

      /* logo */
      .logoLink { display: inline-flex; align-items: center; }
      .logo {
        width: 72px;
        height: 72px;
        display: block;
        object-fit: contain;
      }

      /* centered name */
      .titleLink {
        text-decoration: none;
        font-size: 52px;
        font-weight: 700;
        line-height: 1;
        letter-spacing: -0.02em;
      }

      /* nav */
      .nav {
        display: flex;
        gap: 18px;
        font-size: 14px;
      }
      .nav a {
        text-decoration: none;
        padding: 8px 10px;
        border-radius: 12px;
        color: rgba(229,231,235,.9);
      }
      .nav a:hover {
        background: rgba(255,255,255,.06);
      }

      /* main content column */
      .main { padding: 64px 0; }
      .content{
        max-width: 760px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 22px;
      }

      /* footer */
      .footer{
        border-top: 1px solid rgba(255,255,255,.08);
        padding: 28px 0;
        color: rgba(229,231,235,.6);
        font-size: 14px;
      }

      /* responsive: prevent header crowding */
      @media (max-width: 820px){
        .header{ min-height: 92px; }
        .logo{ width: 90px; height: 90px; }
        .titleLink{ font-size: 26px; }
        .nav{ gap: 10px; }
        .nav a{ padding: 6px 8px; }
      }

      @media (max-width: 520px){
        .titleLink{ font-size: 20px; }
        .nav{ font-size: 13px; }
      }
    </style>
  </body>
</html>
